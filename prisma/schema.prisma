generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String     @unique
  phoneNumber  String?
  profileImage String?
  password     String
  role         UserRole   @default(CLUB_OWNER)
  status       UserStatus @default(ACTIVE)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@map("Users")
  Club Club?
}

model Club {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  ownerId    String   @db.ObjectId @unique
  name        String
  description String?
  image       String?
  remainingCourts Int @default(3)
  remainingMembers Int @default(20)
  isSubscribed      Boolean @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner       User     @relation(fields: [ownerId], references: [id])

  @@map("Clubs")
  Court Court[]
  Member Member?
  Match Match[]
  Session Session[]
}

model Court{
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String @unique
  description String?
  image       String?
  clubId      String   @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  club        Club     @relation(fields: [clubId], references: [id])

  @@map("Courts")
  Match Match[]
  SessionCourt SessionCourt[]
}

model Member{
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  gender     Gender @default(MALE)
  level       Level @default(CASUAL)
  clubId      String?   @db.ObjectId @unique
  isMember   Boolean @default(false)
  joinedAt    DateTime @default(now())
  status      UserStatus @default(ACTIVE)

  club        Club?     @relation(fields: [clubId], references: [id])

  @@map("Members")
  Participant Participant[]
  SessionParticipant SessionParticipant[]
}

enum Gender {
  MALE
  FEMALE
}

enum Level {
  CASUAL
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model Match{
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  clubId      String?   @db.ObjectId
  courtId     String?   @db.ObjectId
  createdAt   DateTime @default(now())
  startTime   DateTime
  endTime     DateTime
  matchType        MatchType @default(QUICK)
  sessionId   String?   @db.ObjectId
  updatedAt   DateTime @updatedAt

  club        Club?     @relation(fields: [clubId], references: [id])
  court       Court?    @relation(fields: [courtId], references: [id])
  session     Session?  @relation(fields: [sessionId], references: [id])

  @@map("QuickMatches")
  Participant Participant[]
}

model Session {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  clubId      String?   @db.ObjectId
  createdAt   DateTime @default(now())
  startTime   DateTime
  endTime     DateTime
  updatedAt   DateTime @updatedAt

  club        Club?     @relation(fields: [clubId], references: [id])

  @@map("ScheduledMatches")
  Match Match[]
  SessionParticipant SessionParticipant[]
  SessionCourt SessionCourt[]
}

enum type {
  SINGLE
  DOUBLE
}

model Participant{
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  memberId    String   @db.ObjectId
  matchId     String   @db.ObjectId
  isWon       Boolean @default(false)
  joinedAt    DateTime @default(now())
  status      UserStatus @default(ACTIVE)

  match       Match    @relation(fields: [matchId], references: [id])
  member      Member   @relation(fields: [memberId], references: [id])

  @@map("Participants")
}

model SessionParticipant {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  memberId    String   @db.ObjectId
  sessionId   String   @db.ObjectId
  status      UserStatus @default(ACTIVE)

  session     Session  @relation(fields: [sessionId], references: [id])
  member      Member   @relation(fields: [memberId], references: [id])

  @@map("SessionParticipants")
}

model SessionCourt{
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionId   String   @db.ObjectId
  courtId     String   @db.ObjectId
  isBooked    Boolean @default(false)

  session     Session  @relation(fields: [sessionId], references: [id])
  court       Court    @relation(fields: [courtId], references: [id])

  @@map("SessionCourts")
}

model Subscription {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  clubId      String   @db.ObjectId

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@map("Subscriptions")
}

enum MatchType {
  QUICK
  SCHEDULED
}

enum UserRole {
  ADMIN
  SUPER_ADMIN
  CLUB_OWNER
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BLOCKED
}
